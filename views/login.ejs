<form action="/user/login" method="post" class="bg-gray-900 mt-[5vw] text-white p-6 rounded-lg md:w-96 lg:w-120 mx-auto">
    <div class="mb-4">
      <label for="email" class="block text-sm font-medium text-gray-200">Email</label>
      <input type="email" name="email" id="email" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500" required>
    </div>
    <div class="mb-4">
      <label for="password" class="block text-sm font-medium text-gray-200">Password</label>
      <input type="password" name="password" id="password" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500" required>
    </div>
    <div class="flex items-center justify-between mb-4">
      <a href="#" class="text-sm text-white hover:text-indigo-500">Forgot password?</a>
    </div>
    <div class="text-center">
        <input type="submit" value="Login" class="cursor-pointer bg-[#1da1f2] text-white py-2 px-4 rounded hover:bg-[#0d86d1] focus:outline-none">

    </div>
    <p class="mt-4 text-center text-sm text-gray-500">
      Not a member?
      <a href="/user/register" class=" text-white hover:text-indigo-500">Register now</a>
    </p>
  </form>
  
  

