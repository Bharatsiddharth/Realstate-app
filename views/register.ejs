        <form action="/user/register" method="post" class="bg-gray-900 mt-[5vw] text-white p-6 rounded-lg md:w-96 lg:w-120 mx-auto">
            <div class="mb-4">
              <label for="name" class="block text-sm font-medium text-gray-200">Name</label>
              <input type="text" placeholder="Enter Your Name" name="name" id="name" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500">
            </div>
            <div class="mb-4">
              <label for="email" class="block text-sm font-medium text-gray-200">Email</label>
              <input type="email" placeholder="Enter Your email" name="email" id="email" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500">
            </div>
            <div class="mb-4">
              <label for="password" class="block text-sm font-medium text-gray-200">Password</label>
              <input type="password" placeholder="Enter password" name="password" id="password" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500">
            </div>
            <div class="mb-4">
              <label for="role" class="block text-sm font-medium text-gray-200">Role</label>
              <select name="role" id="role" class="mt-1 p-2 w-full bg-gray-800 text-white border border-gray-700 rounded focus:outline-none focus:border-gray-500">
                <option value="buyer">buyer</option>
                <option value="seller">seller</option>
                <option value="agent">agent</option>
              </select>
            </div>
            <div class="text-center">
              <input type="submit" value="Register" class="cursor-pointer bg-[#1da1f2] text-white py-2 px-4 rounded hover:bg-[#0d86d1] focus:outline-none">
            </div>
          </form>
          

